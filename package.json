{
  "name": "hackagent",
  "version": "1.0.0",
  "description": "HackAgent â€” AI Security Analyst Desktop Application",
  "main": "dist/main/main.js",
  "scripts": {
    "build": "tsc && npm run copy-renderer",
    "copy-renderer": "shx mkdir -p dist/renderer/styles && shx cp src/renderer/index.html dist/renderer/ && shx cp src/renderer/app.js dist/renderer/ && shx cp src/renderer/styles/style.css dist/renderer/styles/",
    "start": "npm run build && electron .",
    "start:dev": "npm run build && electron . --dev",
    "package": "npm run build && electron-builder --dir",
    "make": "npm run build && electron-builder"
  },
  "author": "Mikechimp",
  "license": "MIT",
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "shx": "^0.4.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "openai": "^4.28.0"
  },
  "build": {
    "appId": "com.hackagent.app",
    "productName": "HackAgent",
    "files": [
      "dist/**/*",
      "data/**/*",
      "config/**/*"
    ],
    "directories": {
      "output": "out"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    }
  }
}
