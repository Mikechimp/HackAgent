{
  "manifest_version": 2,
  "name": "HackAgent â€” Security Analyzer",
  "version": "1.0.0",
  "description": "Capture and analyze web pages for security vulnerabilities with HackAgent AI",
  "icons": {
    "48": "icons/icon.svg",
    "96": "icons/icon.svg"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "<all_urls>"
  ],
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_title": "HackAgent Security Analysis"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "scripts": ["background/background.js"]
  }
}
